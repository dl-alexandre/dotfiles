# Machine-specific environment variables
# Copy this to .env.local and customize for your machine
# This file should NOT be committed to git

# Username for paths
export USERNAME="your_username"

# Monitor configuration (for hypr/monitors.conf)
export MONITOR_CONFIG="HDMI-A-1,1920x1080,0x0,1
monitor=eDP-1,1440x900,240x1080,1"

# Keyboard device name (for waybar and hyprland)
export KEYBOARD_NAME="your-keyboard-device-name"

# Thermal zone for CPU (for waybar temperature and auto-power.sh)
export CPU_THERMAL_ZONE="2"

# SSH hosts (if any machine-specific defaults)
# export SSH_HOSTS="..."

# Other machine-specific vars as needed